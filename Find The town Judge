class Solution {
    public int findJudge(int n, int[][] trust) {
        int[] arr = new int[n + 1];

        for(int i = 0; i < trust.length; i++){
            int a = trust[i][0];
            int b = trust[i][1];
            arr[a]--;
            arr[b]++;
        }
        for(int j = 0; j <= n; j++){
            if(arr[j] == n - 1){
                return j;
            }
        }
        return -1;
    }
}
